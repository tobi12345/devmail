{
	"name": "DevMail",
	"description": "Mail client for testing & development",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage"],
	"action": {
		"default_popup": "index.html",
		"default_icon": {
			"16": "/assets/favicon-16x16.png",
			"32": "/assets/favicon-32x32.png",
			"48": "/assets/favicon-48x48.png"
		}
	},
	"icons": {
		"16": "/assets/favicon-16x16.png",
		"32": "/assets/favicon-32x32.png",
		"48": "/assets/favicon-48x48.png"
	}
}
