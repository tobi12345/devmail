{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"target": "ES2016",
		"lib": ["dom", "ES2016"],
		"allowJs": false,
		"jsx": "react",
		"moduleResolution": "Node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["../src/ui-inbox", "../src/ui-background"],
	"references": [
		{
			"path": "./tsconfig.types.shared.json"
		},
		{
			"path": "./tsconfig.ui.shared.json"
		}
	]
}
